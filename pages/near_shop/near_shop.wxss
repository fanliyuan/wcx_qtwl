#over_view .content view{
  width:150rpx;
  margin-left:30rpx;
  display:inline-block;
  margin-bottom:20rpx;
  font-size:14px;
  text-align:center;
  background:#eee;
  padding:10rpx 0;
  border-radius:10rpx;
  border:1px solid #eee;
} 
#over_view .content view.active{
  border:1px solid #e4393c;
  color:#e4393c;
  background:#fff;
}
#over_view{
  position:fixed;
  top:43px;
  left:0;
  background:rgba(0,0,0,.5);
  width:750rpx;
  height:calc(100% - 43px);
  padding-right:30rpx;
  box-sizing:border-box;
}
#over_view .content{
  position:absolute;
  top:0;
  left:0;
  background:#fff;
  width:750rpx;
  border-top:1px solid #eee;
  padding:20rpx 0 10rpx;
}
#title text{
  position:relative;
  padding:20rpx 0;
}
#title text.active:after{
  content:"";
  display:block;
  position:absolute;
  border-bottom:2px solid #e4393c;
  bottom:0;
  left:15rpx;
  right:15rpx;
}
.shop_title{
  display:flex;
  justify-content:space-between;
  padding:20rpx;
  background:#fff;
  align-items:center;
  border-bottom:1px solid #ddd;
}
.titles{
  display:block;
  font-size:16px;
}
.detail{
  font-size:12px;
  color:#999;
}
.distance{
  margin-left:60rpx;
}
.btn{
  border:1px solid #e4393c;
  border-radius:37rpx;
  width:150rpx;
  height:74rpx;
  text-align:center;
  line-height:74rpx;
  color:#e4393c;
}
.img_content{
  display:flex;
  padding:15rpx;
  background:#fff;
  margin-bottom:20rpx;
}
.img_content image + image{
  margin-left:10rpx;
}
