.banner{
  background:#FEF8D4;
  padding:15rpx;
}
.floor2{
  margin:20rpx 0;
}
.ban1 .content{
  position:absolute;
  left:0;
  top:50%;
  color:#FEF8D4;
  transform:translate(0,-50%);
  display:flex;
  align-items:center;
}
.ban1 .content .name{
  width:242rpx;
  text-align:center;
  font-size:38rpx;
  /* font-family:cursive; */
  letter-spacing:5rpx;
  
}
.ban1 .content .info{
  width:468rpx;
  text-align:center;
}
.ban1 .content .info .i1{
  display:block;
  font-size:34rpx;
}
.ban1 .content .info .i2{
  font-size:26rpx;
}
.floor3 .contain{
  display:inline-block;
  margin-bottom:10rpx;
  position:relative;
}
.floor3 .contain.right{
  margin-left:10rpx;
}
.floor3 .content{
  position:absolute;
  left:50%;
  top:50%;
  display:flex;
  flex-direction:column;
  transform:translate(-50%,-50%);
  color:#FEF8D4;
  text-align:center;
}
.floor3 .content .i1{
 font-size:30rpx;
}
.floor3 .content .i2{
  font-size:28rpx;
}
.floor3 .content .i3{
  font-size:22rpx;
  padding:1px 45rpx;
  background:#FEF8D4;
  color:#CB373F;
  margin-top:10rpx;
}
.floor3 .already{
  position:absolute;
  right:15rpx;
  top:50%;
  transform:translate(0,-50%);
}
