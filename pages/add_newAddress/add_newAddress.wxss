.item{
  background:#fff;
  line-height:80rpx;
  border-bottom:1px solid #eee;
  color:#333;
}
.item picker{
  display:inline-block;
  font-size:35rpx;
  color:#999;
}
.item text{
  line-height:80rpx;
  font-size:35rpx;
  display:inline-block;
  vertical-align:middle;
  padding:0 20rpx;
}
.item input{
  display:inline-block;
  vertical-align:middle;
  line-height:80rpx;
}
.set_default{
  margin-top:25rpx;
  background:#fff;
  display:flex;
  justify-content:space-between;
  padding:25rpx;
}
.set_default text{
  font-size:35rpx;
}
.save{
  background:#DF5100;
  color:#fff;
  text-align:center;
  padding:15rpx 0;
  position:fixed;
  left:0;
  bottom:0;
  width:750rpx;
}